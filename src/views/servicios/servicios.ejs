<%- layout('./layouts/main.ejs') %>
<link rel="stylesheet" href="../style/Servicios.css">
<div class="container-fluid servicioHead">
    <h1>Servicios</h1>
</div>
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-4">
            <div class="form-floating search">
                <input type="text" class="form-control rounded-pill" id="floatingInputInvalid" placeholder="" >
                <label for="floatingInputInvalid" class="label-buscar"><i class="fa-solid fa-magnifying-glass"></i>   Buscar servicio</label>
            </div>
        </div>
        <div class="col-4">
            <a href="" class="reporte-crear">
                <p class="rounded-pill"><i class="fa-solid fa-download fa-2xl"></i>  Generar reporte de Servicios</p>
            </a>
        </div>
        <div class="col-4">
            <a href="/create-servicio" class="create-servicio">
                <p class="rounded-pill">Crear servicio<i class="fa-solid fa-circle-plus fa-2xl" style="color: #ffffff; margin-left: 100px;"></i></p>
            </a>
        </div>
    </div>
</div>
<div class="container-fluid">
    <table class="table table-hover table-borderless mt-3 text-center table-sm">
        <thead>
            <tr class="table-secondary">
                <th class="p-3">ID Servicio</th>
                <th class="p-3">ID Empleado</th>
                <th class="p-3">ID Cita</th>
                <th class="p-3">Precio servicio</th>
                <th class="p-3">Duraci√≥n servicio</th>
                <th class="p-3">Fecha servicio</th>
                <th class="p-3">Estado cita</th>
                <th class="p-3">Opciones</th>
            </tr>
        </thead>
        <tbody>

            <% id = 1; %>
            <% servicios.forEach(obj => { %>
            <tr>
                <td><%= obj.idServicio %></td>
                <td><%= obj.idEmpleado %></td>
                <td><%= obj.idCita %></td>
                <td><%= obj.precioServicio %></td>
                <td><%= obj.duracionServicio %></td>
                <td><%= obj.fechaCita %></td>
                <td><%= obj.estadoCita %></td>
                <td>
                    <div class="d-flex justify-content-between">
                        <div class="">
                            <a href="/edit-servicio/<%= obj.idServicio %>">
                                <i class="fa-solid fa-pen fa-xl" style="color: #3cc3bd;"></i>
                            </a>
                        </div>
                        <div>
                            <a href="/delete-servicio/<%= obj._id %>" onclick="return deleteCompra()">
                                <i class="fa-solid fa-trash fa-xl" style="color: #929292;"></i>
                            </a>
                        </div>
                        <div>
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </td>
            </tr>
            <% id++; %>
            <% }); %>

        </tbody>
    </table>
</div>
<div class="container-fluid container-paginado">
    <div>
        <div class="row">
            <div class="col d-flex paginado">
                <a href="">
                    <i class="fa-solid fa-caret-left"></i>
                </a>
                <p>1</p>
                <a href="">
                    <i class="fa-solid fa-caret-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="./style/detalle.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>detallesVenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <script>
    console.log(ventas)
  </script>
  <body class="body">
    <div class="container-fluid titulo-detalles-Venta">
        <div class="row">
            <div class="col text-center">
                <h1>Detalles Ventas</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
      <% ventas.forEach(venta=> { %>
        <table class="table tabla table-hover mt-3 text-center ">
          <thead>
            <tr class="table-secondary">
              <th class="p-3">ID Detalle Venta</th>
              <th class="p-3">Nombre Empleado</th>
              <th class="p-3">Nombre servicio</th>
              <th class="p-3">Costo Servicio</th>
            </tr>
          </thead>
          <tbody>
             <% venta.detallesVenta.forEach(detalle =>{ %>
                <tr>
                  <td>
                    <%= detalle.detalleVenta %>
                  </td>
                  <td>
                    <%= detalle.nombreEmpleado%>
                  </td>
                  <td>
                    <%= detalle.nombreServicio %>
                  </td>
                  <td>
                    <%= detalle.costoServicio%>
                  </td>
                
                </tr>
              <% }); %> 
              <tr>
                <th colspan="5" class="table-secondary">
                  Costo total
                </th>
              </tr>
              <tr>
                <td colspan="5">
                  <%= venta.costoTotalCita %>
                </td>
              </tr>
          </tbody>
        </table>
        <% }); %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
<%- layout('./layouts/main.ejs') %>
    <link rel="stylesheet" href="../style/ventas.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script src="../js/validations.js"></script>
    <div class="container-fluid">
        <div class="create-tittle container-fluid">
            <div class="row">
                <div class="col-12">
                    <h1>Crear venta servicio</h1>
                </div>
            </div>
        </div>



        <% let idVenta; %>
            <% if (venta) { %>
                <% idVenta=venta.idVenta + 1; %>
                    <% } else { %>
                        <% idVenta=1; %>
                            <% }; %>
                                <script>
                                    let servicesAdded = [];

                                    function valueInputCliente(sel) {
                                        let nombreCliete = document.getElementById("nombreCliente");
                                        if (sel.value == 1) {
                                            nombreCliete.value = "Juan";
                                        } else if (sel.value == 2) {
                                            nombreCliete.value = "Diego";
                                        } else if (sel.value == 3) {
                                            nombreCliete.value = "Johan";
                                        } else if (sel.value == 4) {
                                            nombreCliete = "Santiago";
                                        }
                                    }
                                    function valueInputEmpleado(sel) {
                                        let nombreCliete = document.getElementById("nombreEmpleado");
                                        if (sel.value == 1) {
                                            nombreCliete.value = "Juan";
                                        } else if (sel.value == 2) {
                                            nombreCliete.value = "Diego";
                                        } else if (sel.value == 3) {
                                            nombreCliete.value = "Johan";
                                        } else if (sel.value == 4) {
                                            nombreCliete = "Santiago";
                                        }
                                    }

                                    function valueInputServicio(sel) {
                                        let nombreServicio = document.getElementById("nombreServicio");
                                        if (sel.value == 1) {
                                            nombreServicio.value = "Corte de cabello";
                                        } else if (sel.value == 2) {
                                            nombreServicio.value = "Uñas acrílicas";
                                        } else if (sel.value == 3) {
                                            nombreServicio.value = "Tinturado";
                                        } else if (sel.value == 4) {
                                            nombreServicio.value = "Alizado";
                                        }
                                    }
                                    function valueInputServi(sel) {
                                        let nombreServicio = document.getElementById("nombreServicio");
                                        if (sel.value == 1) {
                                            nombreServicio.value = "Corte de cabello";
                                        } else if (sel.value == 2) {
                                            nombreServicio.value = "Uñas acrílicas";
                                        } else if (sel.value == 3) {
                                            nombreServicio.value = "Tinturado";
                                        } else if (sel.value == 4) {
                                            nombreServicio.value = "Alizado";
                                        }
                                    }

                                </script>


                                <div class="create-body">

                                    <form action="createVentaSer" method="post"
                                        onsubmit=" return validarVentaServicio();">
                                        <div class="container-fluid">
                                            <div class="text-center row mt-4 fields">
                                                <div class="col">
                                                    <label for="idVenta" class="form-label">ID Venta</label><br>
                                                    <input type="text" class="input-bonito" id="idVenta" name="idVenta"
                                                        value="<%= idVenta %>" readonly>
                                                </div>
                                                <div class="col">
                                                    <label for="idVentaServicio" class="form-label">ID Venta
                                                        Servicio</label><br>
                                                    <input type="text" class="input-bonito" id="idVentaServicio"
                                                        name="idVentaServicio">
                                                </div>
                                                <div class="col">
                                                    <label for="idCliente" class="form-label ">Seleccione el</label><br>
                                                    <select id="idCliente" class="form-select" name="idCliente"
                                                        onchange="valueInputCliente(this)">
                                                        <option value="noSelect" selected disabled>Cliente...</option>
                                                        <option value="1">1. Juan</option>
                                                        <option value="2">2. Diego</option>
                                                        <option value="3">3. Johan</option>
                                                        <option value="4">4. Santiago</option>
                                                    </select>
                                                </div>
                                                <div class="col">
                                                    <label for="idCita" class="form-label">ID Cita</label><br>
                                                    <input type="text" class="input-bonito" id="idCita" name="idCita">
                                                </div>

                                                <div class="col">
                                                    <label for="IDServicio" class="form-label ">Seleccione el
                                                    </label><br>
                                                    <select id="idServicio" class="form-select" name="IDServicio"
                                                        onchange="valueInputServicio(this)">
                                                        <option value="noSelect" selected disabled>Servicio...</option>
                                                        <option value="1">1. Corte de cabello</option>
                                                        <option value="2">2. Uñas acrílicas</option>
                                                        <option value="3">3. Tinturado</option>
                                                        <option value="4">4. Alizado</option>
                                                    </select>
                                                </div>
                                                <div class="col">
                                                    <label for="formaPago" class="form-label ">Forma de pago</label><br>
                                                    <select id="formaPago" class="form-select" name="pago">
                                                        <option value="noSelect" selected disabled>Pago...</option>
                                                        <option value="1">Transferencia</option>
                                                        <option value="2">Efectivo</option>>
                                                    </select>
                                                </div>
                                                <div class="col">
                                                    <label for="estadoVentaServicio"
                                                        class="form-label ">Estado</label><br>
                                                    <select id="estadoVentaServicio" class="form-select"
                                                        name="estadoVentaServicio">
                                                        <option value="noSelect" selected disabled>Estado...</option>
                                                        <option value="1">Pendiente</option>
                                                        <option value="2">En progreso</option>
                                                        <option value="3">Finalizado</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="text-center row mt-4 fields">
                                                <div class="col">
                                                    <label for="fechaVentaServicio" class="form-label">Fecha</label><br>
                                                    <input type="date" id="fechaVentaServicio" class="input-bonito"
                                                        name="fechaVentaServicio">
                                                </div>
                                                <div class="col">
                                                    <label for="nombreCliente" class="form-label">Nombre
                                                        Cliente</label><br>
                                                    <input type="text" id="nombreCliente" class="input-bonito" value=""
                                                        name="nombreCliente" readonly>
                                                </div>
                                                <div class="col">
                                                    <label for="nombreServicio" class="form-label">Nombre
                                                        servicio</label><br>
                                                    <input type="text" id="nombreServicio" class="input-bonito" value=""
                                                        name="nombreServicio" readonly>
                                                </div>
                                                <div class="col">
                                                    <label for="costoTotalCita" class="form-label">Costo
                                                        Total</label><br>
                                                    <input type="text" id="costoTotalCita" class="input-bonito"
                                                        name="costoTotalCita">
                                                </div>
                                                <div class="col">
                                                    <input type="button" class="input-bonito" data-toggle="modal"
                                                        data-target="#exampleModal" value="Agregar servicio..."
                                                        onclick="agregarServicio()">

                                                </div>
                                            </div>
                                        </div>
                                        <div id="addServicio">
                                        </div>
                                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Agregar servicio</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body" id="modal-body">
                                                        ...
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Cerrar</button>
                                                        <button type="button" class="btn btn-primary"
                                                            onclick="addServiceToSale()"
                                                            data-dismiss="modal">Agregar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <script>
                                            function addServiceToSale() {
                                                let duracionServicioValue = $('#precioServicio').val();
                                                // Agrega elementos de a uno
                                                servicesAdded.push(duracionServicioValue);
                                                let div = document.getElementById('addServicio');
                                                div.append( duracionServicioValue );
                                            }
                                            function agregarServicio() {
                                                let fields = "";

                                                let divServicio = document.getElementById("modal-body");

                                                fields = '<div class="row text-center mt-4 fields">' +
                                                    '<div class="col">' +
                                                    '<label for="idEmpleado" class="form-label ">Seleccione el Empleado</label><br>' +
                                                    '<select id="idEmpleado" class="form-select" name="idEmpleado" onchange="valueInputEmpleado(this)">' +
                                                    '<option value="noSelect" selected disabled>Empleado...</option>' +
                                                    '<option value="1">1. Juan</option>' +
                                                    '<option value="2">2. Diego</option>' +
                                                    '<option value="3">3. Johan</option>' +
                                                    '<option value="4">4. Santiago</option>' +
                                                    '</select>' +
                                                    '</div>' +
                                                    '<div class="col">' +
                                                    '<label for="idServicioA" class="form-label ">Seleccione el Servicio</label><br>' +
                                                    '<select id="idServicioA" class="form-select" name="servicio" onchange="valueInputServi(this)">' +
                                                    '<option value="noSelect" selected disabled>Servicio...</option>' +
                                                    '<option value="1">1. Corte de cabello</option>' +
                                                    '<option value="2">2. Uñas acrílicas</option>' +
                                                    '<option value="3">3. Tinturado</option>' +
                                                    '<option value="4">4. Alizado</option>' +
                                                    '</select>' +
                                                    '</div>' +
                                                    '<div class="col">' +
                                                    '<label for="duracionServicio" class="form-label">Duración Servicio</label><br>' +
                                                    '<input type="text" class="input-bonito" id="duracionServicio" name="duracionServicio">' +
                                                    '</div>' +
                                                    '</div>' +
                                                    '<div class="row text-center mt-4 fields">' +
                                                    '<div class="col">' +
                                                    '<label for="nombreEmpleado" class="form-label">Nombre empleado</label><br>' +
                                                    '<input type="text" id="nombreEmpleado" class="input-bonito" value="" name="nombreEmpleado" readonly>' +
                                                    '</div>' +
                                                    '<div class="col">' +
                                                    '<label for="nombreServicio" class="form-label">Nombre servicio</label><br>' +
                                                    '<input type="text" id="nombreServicio" class="input-bonito" value="" name="nombreServicio" readonly>' +
                                                    '</div>' +
                                                    '<div class="col">' +
                                                    '<label for="precioServicio" class="form-label">Precio servicio</label><br>' +
                                                    '<input type="text" id="precioServicio" class="input-bonito" name="precioServicio">' +
                                                    '</div>' +
                                                    '</div>';

                                                divServicio.innerHTML = fields;
                                            }
                                        </script>
                                        <div class="container-fluid">
                                            <div class="row justify-content-center mt-5">
                                                <div class="col text-end">
                                                    <button type="button" class="cancel-btn" onclick="backPage();">
                                                        Cancelar
                                                    </button>
                                                </div>
                                                <div class="col text-start">
                                                    <button type="button" onclick="validarVentaServicio()" class="acept-btn">
                                                        Aceptar
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
    </div>